*
    box-sizing border-box
    margin 0
    padding 0

.icon
    box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
    position absolute
    top 20%
    left 50%
    transform translate(-50%, -50%)
    width 5em
    height 5em
    cursor pointer
    background-color #FFC107
    .hamburger
        width 3.125em
        height 0.375em
        background #fff
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
        transition 0.5s
        &:after
            position absolute
            top 1em
            background #fff
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            content ''
            height 0.375em
            width 3.125em
            transition 0.5s
        &:before
            position absolute
            top -1em
            background #fff
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            content ''
            height 0.375em
            width 3.125em
            transition 0.5s
    &.active
        .hamburger
            background rgba(0,0,0,0)
            box-shadow 0 0.125em 0.3125em rgba(0,0,0,0.2)
            &:after
                transform rotate(135deg)
                top 0
            &:before
                transform rotate(45deg)
                top 0